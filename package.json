{
  "name": "type-insurance",
  "version": "1.1.1",
  "description": "Helper class to force (input) types, mainly for pure JavaScript environments",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giannotr/type-insurance.git"
  },
  "keywords": [
    "data",
    "interface",
    "type",
    "types",
    "convert",
    "safety"
  ],
  "author": "Ruben Giannotti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/giannotr/type-insurance/issues"
  },
  "homepage": "https://github.com/giannotr/type-insurance#readme",
  "scripts": {
    "build": "tsc",
    "prepare": "tsc",
    "test": "jest --coverage",
    "test-dev": "xo && npm run test && npm run prepare"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "coveralls": "^3.0.11",
    "jest": "^25.3.0",
    "ts-jest": "^25.4.0",
    "typescript": "^3.8.3",
    "xo": "^0.29.1"
  },
  "dependencies": {
    "@types/hash-sum": "^1.0.0",
    "@types/lodash": "^4.14.150",
    "hash-sum": "^2.0.0",
    "lodash": "^4.17.15"
  },
  "xo": {
    "rules": {
      "keyword-spacing": "off",
      "spaced-comment": "warn",
      "capitalized-comments": "warn",
      "no-trailing-spaces": "warn",
      "no-prototype-builtins": "warn",
      "no-lonely-if": "off",
      "no-else-return": "off",
      "no-implicit-coercion": "off",
      "@typescript-eslint/prefer-readonly-parameter-types": "warn",
      "@typescript-eslint/restrict-plus-operands": "off",
      "@typescript-eslint/no-unsafe-member-access": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/no-unsafe-return": "off"
    },
    "ignores": [
      "./src/**/*.test.js"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
